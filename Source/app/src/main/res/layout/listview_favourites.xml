<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="7dp">


    <ImageView
        android:id="@+id/listview_image"
        android:layout_width="120dp"
        android:layout_height="87dp"
        android:maxHeight="90dp"
        android:maxWidth="120dp"
        android:padding="3dp" />

    <ImageView
        android:id="@+id/listview_smile"
        android:layout_width="56dp"
        android:layout_height="52dp"
        android:layout_alignLeft="@id/listview_image"
        android:layout_alignTop="@id/listview_image"
        android:layout_alignRight="@id/listview_image"
        android:layout_alignBottom="@id/listview_image"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="34dp"
        android:layout_marginRight="-10dp"
        android:layout_marginBottom="1dp"
        android:maxWidth="30dp"
        android:maxHeight="30dp"
        android:padding="3dp" />


    <TextView
        android:id="@+id/listview__title"
        android:layout_width="405dp"
        android:layout_height="48dp"
        android:textAlignment="viewStart"
        android:textColor="#373737"
        android:textSize="30sp"
        android:layout_marginLeft="130dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/listview_description"
        android:layout_width="266dp"
        android:layout_height="43dp"
        android:layout_below="@+id/listview__title"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="-1dp"
        android:layout_toEndOf="@+id/listview_smile"
        android:paddingTop="5dp"
        android:textAlignment="viewStart"
        android:textColor="#8d8d8d"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>
